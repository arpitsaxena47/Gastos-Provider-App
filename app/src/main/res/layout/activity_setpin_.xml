<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A588157"
    tools:context=".Setpin_Activity">


    <TextView
        android:id="@+id/set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Set Pin"
        android:textColor="#004445"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:textStyle="bold"
        android:layout_gravity="clip_horizontal"
        />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set"
        android:layout_marginTop="73dp">

        <View
            android:id="@+id/rectangle_2"
            android:layout_width="310dp"
            android:layout_height="120dp"
            android:layout_below="@+id/pho_number"
            android:layout_alignParentLeft="true"
            android:background="@drawable/group_582"
            />
        <EditText
            android:id="@+id/pin1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/enter_mobile"
            android:layout_marginTop="22dp"
            android:hint="New Pin"
            android:inputType="number"
            android:textColorHint="#818181"
            android:textSize="14dp"
            android:textColor="#004445"
            android:background="@null"
            />
        <EditText
            android:id="@+id/pin2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="35dp"
            android:layout_below="@+id/enter_mobile"
            android:layout_marginTop="75dp"
            android:hint="Re-Enter Pin"
            android:textColorHint="#818181"
            android:textSize="14dp"
            android:textColor="#004445"
            android:background="@null"
            />

        <ImageView
            android:id="@+id/setpinOk"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="280dp"
            android:layout_below="@+id/pho_number"
            android:layout_marginTop="35dp"
            android:background="@drawable/group579"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="-10dp"
            >

            <TextView
                android:id="@+id/resetPin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@null"
                android:text="Resend OTP"
                android:textColor="#818181"
                android:textSize="12dp" />


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>