<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A588157"
    tools:context=".PhoneNumberActivity">


    <View
        android:id="@+id/layer_3"
        android:layout_width="203dp"
        android:layout_height="215dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/layer_3"
        />

    <TextView
        android:id="@+id/enter_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:text="Enter Mobile Number"
        android:textColor="#004445"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_below="@+id/enter_mobile"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rectangle_232" />



    <TextView
        android:id="@+id/some_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/enter_mobile"
        android:layout_marginTop="55dp"
        android:text="+91"
        android:textColor="#818181"
        android:textSize="12dp"
        />
    <ImageView
        android:id="@+id/line_32"
        android:layout_width="1dp"
        android:layout_height="65.1dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="62dp"
        android:layout_below="@+id/enter_mobile"
        android:layout_marginTop="30dp"
        android:background="@drawable/line"
        />


    <ImageView
        android:id="@+id/idBtnGetOTP"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/enter_mobile"
        android:layout_marginTop="40dp"
        android:background="@drawable/group579"
        />

    <EditText
        android:id="@+id/idEdtMobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="phone"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="83dp"
        android:layout_below="@+id/enter_mobile"
        android:layout_marginTop="55dp"
        android:hint="Mobile Number"
        android:textColorHint="#BF595959"
        android:textSize="14dp"
        android:textColor="#004445"
        android:background="@null"
        />
</RelativeLayout>