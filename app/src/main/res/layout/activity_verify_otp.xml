<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A588157"
    tools:context=".VerifyOTPActivity">


    <TextView
        android:id="@+id/verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:layout_centerHorizontal="true"
        android:maxLines="1"
        android:gravity="top"
        android:text="Verify"
        android:textColor="#004445"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify"
        android:layout_marginTop="64dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="We have sent an OTP on your "
        android:textColor="#004445"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="35dp"
        android:text="Number +91"
        android:textColor="#004445"
        android:textStyle="bold"
        android:textSize="18dp"
        />

    <TextView
        android:id="@+id/pho_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/t2"
        android:text="TextView"
        android:textColor="#004445"
        android:textStyle="bold"
        android:textSize="18dp"
         />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="46dp"
        android:background="@drawable/rectangle_232"
        />

    <ImageView
        android:id="@+id/go"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/pho_number"
        android:layout_marginTop="55dp"
        android:background="@drawable/group579"
        />

    <EditText
        android:id="@+id/inputcode1"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp"
         />

    <EditText
        android:id="@+id/inputcode2"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/inputcode3"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputcode4"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputcode5"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputcode6"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pho_number"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="40dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_marginTop="40dp">


    <!--    <ImageView
            android:id="@+id/resend"
            android:layout_width="83dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_233"
            android:elevation="10dp"
            />   -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="22dp"
            android:layout_alignParentRight="true"
            android:elevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="-10dp"
            >

            <TextView
                android:id="@+id/idTVResendOTP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@null"
                android:text="Resend OTP"
                android:textColor="#818181"
                android:textSize="12dp" />


        </androidx.cardview.widget.CardView>


    </RelativeLayout>




</RelativeLayout>