<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A588157"
    tools:context=".Enterpin_Activity">

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="52dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="150dp"
        android:gravity="top"
        android:text="Enter Pin"
        android:textColor="#004445"
        android:textSize="25dp"
        android:textStyle="bold"
        />


    <View
        android:id="@+id/rectangle_2"
        android:layout_width="310dp"
        android:layout_height="65dp"
        android:layout_below="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="148dp"
        android:background="@drawable/rectangle_232"
        />

    <ImageView
        android:id="@+id/go"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="280dp"
        android:layout_below="@+id/e"
        android:layout_marginTop="155dp"
        android:background="@drawable/group579"
        />

    <EditText
        android:id="@+id/inputcode1"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="148dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp"
        />

    <EditText
        android:id="@+id/inputcode2"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="148dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:textColor="#004445"
        android:backgroundTint="#818181"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/inputcode3"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="148dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/inputcode4"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="148dp"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="number"
        android:maxLength="1"
        android:backgroundTint="#818181"
        android:textColor="#004445"
        android:textSize="24sp" />



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go"
        android:layout_marginTop="40dp">


        <ImageView
            android:id="@+id/resend"
            android:layout_width="83dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/rectangle_233"
            android:elevation="10dp"
            />



    </RelativeLayout>

    <TextView
        android:id="@+id/resend_otp"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:layout_below="@+id/go"
        android:layout_marginTop="48dp"
        android:text="Forgot Pin?"
        android:textSize="7dp"
        android:textColor="#818181"
        />

</RelativeLayout>