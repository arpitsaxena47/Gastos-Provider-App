<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home.HomeFragment">




        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/rectangle_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:background="#595959"
                android:scaleType="fitXY"
                />


            <TextView
                android:id="@+id/shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:textColor="@color/white"
                android:layout_marginTop="30dp"
                android:text="Shop Name"
                android:letterSpacing="-0.01"
                android:textSize="25dp"
                />

            <TextView
                android:id="@+id/r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="17dp"
                android:layout_below="@+id/shop_name"
                android:layout_marginTop="54dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:letterSpacing="-0.02"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/shop_name"
                android:layout_marginTop="58dp"
                android:max="5"
                android:numStars="5"
                android:rating="4"
                android:stepSize="0.5"
                android:isIndicator="false"
                android:progressTint="#EAE8DC"
                style="?android:attr/ratingBarStyleSmall"
                />

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/r2"
            android:layout_width="match_parent"
            android:layout_height="166dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="160dp">

            <View
                android:id="@+id/rec_1"
                android:layout_width="wrap_content"
                android:layout_height="166dp"
                android:background="@drawable/shop_rec"
                />
            <TextView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="15dp"
                android:text="Menu"
                android:textSize="20dp"
                android:textColor="@color/textcolor"
                android:textStyle="bold"
                />

  <!--          <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/local_r2"
                android:layout_below="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                />   -->

            <RelativeLayout
                android:id="@+id/local_r2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menu"
                android:layout_marginTop="16dp"
                >
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c1"
                        android:layout_width="120dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="22dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        >

                        <ImageView
                            android:id="@+id/otherpic1"
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:background="#595959"
                            android:scaleType="fitXY"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c2"
                        android:layout_toRightOf="@+id/c1"
                        android:layout_width="120dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="22dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        >

                        <ImageView
                            android:id="@+id/otherpic2"
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:background="#595959"
                            android:scaleType="fitXY"
                            />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/c3"
                        android:layout_toRightOf="@+id/c2"
                        android:layout_width="120dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="22dp"
                        app:cardElevation="10dp"
                        app:cardCornerRadius="10dp"
                        >

                        <ImageView
                            android:id="@+id/otherpic3"
                            android:layout_width="match_parent"
                            android:layout_height="74dp"
                            android:background="#595959"
                            android:scaleType="fitXY"
                            />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                </HorizontalScrollView>


            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/r3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginTop="310dp"
           >

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/rec_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shop_card"
                            />

                        <LinearLayout
                            android:id="@+id/l1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="33dp">
                            <TextView
                                android:id="@+id/payment_ben"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:text="Owner Name:"
                                android:textSize="15dp"
                                android:textColor="@color/textcolor2"
                                />
                            <TextView
                                android:id="@+id/payment_ben_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:layout_marginTop="10dp"
                                android:text="Xxxxx"
                                android:textSize="12dp"
                                android:textColor="@color/textcolor2"
                                />
                            <View
                                android:layout_width="350dp"
                                android:layout_height="2dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="21dp"
                                android:layout_marginRight="21dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/line1"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="124dp">
                            <TextView
                                android:id="@+id/shop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:layout_marginTop="20dp"
                                android:text="Shop Address"
                                android:textSize="15dp"
                                android:textColor="@color/textcolor2"
                                />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/Address"
                                    android:layout_width="272dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="21dp"
                                    android:layout_marginTop="10dp"
                                    android:maxLines="7"
                                    android:text="Xxxx "
                                    android:textSize="12dp"
                                    android:textColor="@color/textcolor2"
                                    />

                                <ImageView
                                    android:id="@+id/btnNearMe"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginLeft="14dp"
                                    android:src="@drawable/near_me_24px" />
                            </LinearLayout>

                            <View
                                android:layout_width="350dp"
                                android:layout_height="2dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="21dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/line1"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/l3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="250dp">
                            <TextView
                                android:id="@+id/cat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:text="Category"
                                android:textSize="15dp"
                                android:textColor="@color/textcolor2"
                                />
                            <TextView
                                android:id="@+id/category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="21dp"
                                android:layout_marginTop="10dp"
                                android:text="Xxxx"
                                android:textSize="12dp"
                                android:textColor="@color/textcolor2"
                                />
                            <View
                                android:layout_width="350dp"
                                android:layout_height="2dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="21dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/line1"
                                />
                        </LinearLayout>


                    </RelativeLayout>


                </ScrollView>



        </RelativeLayout>







</RelativeLayout>