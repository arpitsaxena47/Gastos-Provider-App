<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/shop_info_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@drawable/long_left_black" />

    <ImageView
        android:id="@+id/saveShopInfoChanges"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp"
        android:layout_marginRight="21dp"
        android:clickable="true"
        android:visibility="gone"
        android:src="@drawable/ic_baseline_done_24" />
    <TextView
        android:id="@+id/idTVHeadShopInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:textColor="#000000"
        android:text="@string/shop_inform"
        android:textAppearance="@style/settings" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTVHeadShopInfo"
        tools:context=".Setting.ShopInformation.ShopInformation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">


            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                app:cardCornerRadius="20dp">

                <ImageView
                    android:id="@+id/idIVShop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/acc_image_icon" />

                <TextView
                    android:id="@+id/txtCoverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    android:elevation="1dp"
                    android:gravity="center"
                    android:text="Cover \nPicture"
                    android:textAppearance="@style/shop_name"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/other1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/acc_image_icon" />

                    <TextView
                        android:id="@+id/txtOther1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:text="Add other \nphoto 1"
                        android:textAppearance="@style/other"
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/other2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/acc_image_icon" />

                    <TextView
                        android:id="@+id/txtOther2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:text="Add other \nphoto 2"
                        android:textAppearance="@style/other"
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:elevation="5dp"
                    app:cardCornerRadius="10dp">

                    <ImageView
                        android:id="@+id/other3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/acc_image_icon" />

                    <TextView
                        android:id="@+id/txtOther3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"
                        android:elevation="1dp"
                        android:gravity="center"
                        android:text="Add other \nphoto 3"
                        android:textAppearance="@style/other"
                        android:textColor="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:padding="3dp"
                android:textSize="20sp"
                android:text="@string/shop_name"
                android:textColor="#595959"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <EditText
                    android:id="@+id/idEdtShopName"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="cafe_Bistro"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/cafe_bistro" />

                <ImageButton
                    android:id="@+id/editShopName"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="11dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:textSize="20sp"
                android:text="@string/shop_addres"
                android:textColor="#595959"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <EditText
                    android:id="@+id/idEdtShopAddress"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="# 3, Whitefields 134 - 4 , Ashok Nagar, Pune, Maharashtra 411007"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/cafe_bistro" />

                <ImageButton
                    android:id="@+id/editShopAddress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="11dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit_24" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:padding="3dp"
                    android:textColor="#595959"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    android:text="@string/shop_catego" />

                <RelativeLayout
                    android:layout_width="138dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:background="@drawable/rectangle_236"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/dropDownCategory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawSelectorOnTop="true"
                        android:spinnerMode="dialog"
                        android:prompt="@string/category_spinner_prompt"
                        android:dropDownSelector="@drawable/circle_chevron_right"/>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:textColor="#595959"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    android:text="@string/shop_locati" />


                <Button
                    android:id="@+id/btnShopLocation"
                    android:layout_width="65dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/rectangle_2"
                    android:text="Add"
                    android:textSize="10dp"
                    android:textColor="@color/white"
                    android:backgroundTint="@null"
                    android:textAllCaps="false"
                    app:backgroundTint="#588157"
                    android:visibility="gone"
                    />
                   <!-- android:background="@drawable/rectangle_2"
                    android:textAppearance="@style/add"
                    -->



            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="204dp"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:layout_alignParentStart="true"
                    android:textSize="20dp"
                    android:textColor="#595959"
                    android:textStyle="bold"
                    android:letterSpacing="-0.02"
                    android:text="@string/shop_locate_city" />

                <RelativeLayout
                    android:layout_width="138dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rectangle_236">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/dropdownCity"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:drawSelectorOnTop="true"
                        android:spinnerMode="dialog"
                        android:prompt="@string/city_spinner_prompt"
                        android:dropDownSelector="@drawable/circle_chevron_right"/>
                </RelativeLayout>
            </RelativeLayout>



        </LinearLayout>



    </ScrollView>
</RelativeLayout>
