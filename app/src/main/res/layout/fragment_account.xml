<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/account_info_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:clickable="true"
        android:src="@drawable/long_left_black" />

    <ImageView
        android:id="@+id/saveAccountChanges"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="28dp"
        android:layout_marginRight="21dp"
        android:clickable="true"
        android:src="@drawable/ic_baseline_done_24" />
    <TextView
        android:id="@+id/idTVHeadAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:textSize="25dp"
        android:textColor="#000000"
        android:text="@string/account_inf"
        android:textAppearance="@style/settings" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/idTVHeadAccount"
        tools:context=".Setting.ShopInformation.ShopInformation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="50dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:padding="3dp"
                android:textSize="20sp"
                android:text="@string/owner_name"
                android:textColor="#595959"
                android:textStyle="bold"
                android:letterSpacing="-0.02"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <EditText
                    android:id="@+id/idEdtOwnerName"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Mahdeep Singh"
                    android:inputType="textMultiLine"
                    android:textAppearance="@style/cafe_bistro" />

                <ImageButton
                    android:id="@+id/editOwnerName"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit_24" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:textSize="20sp"
                android:text="@string/phone_numbe"
                android:textColor="#595959"
                android:textStyle="bold"
                android:letterSpacing="-0.02" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <EditText
                    android:id="@+id/idEdtPhoneNum"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"

                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="9999111100"
                    android:inputType="number"
                    android:textAppearance="@style/cafe_bistro" />

                <ImageButton
                    android:id="@+id/editPhoneNum"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit_24" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="3dp"
                android:textSize="20sp"
                android:text="@string/email_addre"
                android:textColor="#595959"
                android:textStyle="bold"
                android:letterSpacing="-0.02"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp">

                <EditText
                    android:id="@+id/idEdtEmailAddress"
                    android:layout_width="268dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="mahdeep@gmail.com"
                    android:inputType="textEmailAddress"
                    android:textAppearance="@style/cafe_bistro" />

                <ImageButton
                    android:id="@+id/editEmailAddress"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="12dp"
                    android:background="@null"
                    android:clickable="true"
                    android:src="@drawable/ic_baseline_edit_24" />
            </RelativeLayout>



        </LinearLayout>



    </ScrollView>
</RelativeLayout>